<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_view_search_inherit_channel" model="ir.ui.view">
            <field name="name">account.move.search.inherit.channel</field>
            <field name="model">account.move</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">

                <filter name="myinvoices" position="before">
                    
                    <field name="sale_channel_id"/>
                    <separator/>
            
                </filter>

                <filter name="group_by_sequence_prefix" position="after">

                    <separator/>
                    <filter string="Sale Channel"
                            name="groupby_sale_channel"
                            domain="[]"
                            context="{'group_by': 'sale_channel_id'}"/>
                </filter>
            </field>
        </record>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form.inherit.sale.channel</field>
            <field name="model">account.move</field> 
            <field name="inherit_id" ref = "account.view_move_form"/>
            <field name = "arch" type = "html">
            
                <xpath expr="//group[@id = 'header_left_group']" position="inside">
                    <field name="sale_channel_id"/>
                </xpath> 
            </field>
        </record>

    </data>
</odoo>