<odoo>
    <record id="view_partner_form_credit" model="ir.ui.view">
        <field name="name">res.partner.form.credit.group</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sales_purchases']//group" position="inside">
                <group string="Credit Management">
                    <field name="credit_group_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
